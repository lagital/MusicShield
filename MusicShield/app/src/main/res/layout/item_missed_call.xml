<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/missed_call_view">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/missed_call_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/missed_call_card"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_call_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_call_missed_black_36dp"
                android:contentDescription="@string/missed_call_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_call_numname"
                android:layout_toRightOf="@+id/missed_call_icon"
                android:layout_alignParentTop="true"
                android:text="Test Number"
                android:textColor="@color/primary_text"
                android:textSize="25sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_call_date_time"
                android:textColor="@color/secondary_text"
                android:text="Test Date"
                android:layout_toRightOf="@+id/missed_call_icon"
                android:layout_below="@+id/missed_call_numname"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_call_number_secret"
                android:visibility="gone"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>