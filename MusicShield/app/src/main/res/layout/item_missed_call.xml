<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/missed_call_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    card_view:cardBackgroundColor="@color/missed_call_card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/missed_call_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/missed_call_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_call_numname"
                android:layout_toRightOf="@+id/missed_call_icon"
                android:layout_toEndOf="@+id/missed_call_icon"
                android:layout_alignParentTop="true"
                android:text="Test Number"
                android:layout_marginTop="5dp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/subheading_title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_call_date_time"
                android:textColor="@color/secondary_text"
                android:text="Test Date"
                android:layout_toRightOf="@+id/missed_call_icon"
                android:layout_toEndOf="@+id/missed_call_icon"
                android:layout_marginBottom="11dp"
                android:layout_below="@+id/missed_call_numname"
                android:textSize="@dimen/subheading_subtitle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_call_number_secret"
                android:visibility="gone"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>