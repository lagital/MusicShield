<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/missed_call_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/contact_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/contact_item"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_name"
                android:layout_toRightOf="@+id/contact_icon"
                android:layout_toEndOf="@+id/contact_icon"
                android:layout_alignParentTop="true"
                android:text="Test Name"
                android:layout_marginTop="5dp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/subheading_title"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_numbers"
                android:layout_toRightOf="@+id/contact_icon"
                android:layout_toEndOf="@+id/contact_icon"
                android:layout_below="@+id/contact_name"
                android:orientation="vertical">
            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_checkbox"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>