<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samsara.team.apps.musicshield">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.samsara.team.apps.musicshield.ApplicationMain"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.samsara.team.apps.musicshield.ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="musicshield.agita.team.com.musicshield.ACTIVITYMAIN" />
            </intent-filter>
        </activity>
        <service android:name="com.samsara.team.apps.musicshield.ControlService">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </service>
        <activity
            android:name="com.samsara.team.apps.musicshield.ActivitySettings"
            android:label="@string/title_activity_activity_settings">
        </activity>
    </application>

</manifest>
